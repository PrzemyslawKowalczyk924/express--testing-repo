<h2>Contact me</h2>
  {{#if isSent}}
    <p class="isSent">This message has been sent!<br>The file {{filename}} have been saved!
      <img src="../{{filename}}">
    </p>
  {{/if}}
  {{#if isError}}
    <p class="isError">You can't leave fields empty!</p>
  {{/if}}
<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: 
      <input type="file" name="image" accept="image/png, image/jpg, image/jpeg, image/gif" required>
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>