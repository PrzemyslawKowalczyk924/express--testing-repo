<h2>Contact me</h2>
  {{#if isSent}}
    <div class=".isSent">
      <p>This message has been sent!<br>The file {{name}} have been saved!</p>
    </div>
  {{/if}}
  {{#if isError}}
    <div class=".isError">
      <p>You can't leave fields empty!</p>
    </div>
  {{/if}}
<form action="/contact/send-message" method="POST" enctype="multipart/form-data">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: 
      <input type="file" name="picture" accept=".png, .jpeg, .jpg, .gif">
  </label>
   <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>